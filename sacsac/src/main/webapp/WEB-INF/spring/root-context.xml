	<bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig">
		<property name="driverClassName"
			value="org.mariadb.jdbc.Driver"></property>
		<property name="jdbcUrl"
			value="jdbc:mariadb://localhost:3306/sac"></property>
		<property name="username" value="root"></property>
		<property name="password" value="root"></property>

		<!-- <bean id="hikariConfig" class="com.zaxxer.hikari.HikariConfig"> <property 
			name="driverClassName" value="org.mariadb.jdbc.Driver"></property> <property 
			name="jdbcUrl" value="jdbc:mariadb://localhost:3306/sac"></property> <property 
			name="username" value="root"></property> <property name="password" value="root"></property> -->
	</bean>





	<bean id="datasource" class="com.zaxxer.hikari.HikariDataSource"
		destroy-method="close">
		<constructor-arg ref="hikariConfig"></constructor-arg>
	</bean>

	<bean id="sqlSessionFactory"
		class="org.mybatis.spring.SqlSessionFactoryBean">
		<property name="dataSource" ref="datasource"></property>
	</bean>
	<!-- Root Context: defines shared resources visible to all other web components -->


	<!-- navermail설정 -->
	<bean id="mailSender"
		class="org.springframework.mail.javamail.JavaMailSenderImpl">
		<property name="host" value="smtp.gmail.com" /> <!-- 메이서버 호스트 -->
		<property name="port" value="587" /> <!-- 메이서버 포트번호 -->
		<property name="username" value="wls92222@gmail.com" /> <!-- 자신의 이메일 아이디 -->
		<property name="password" value="jzcrzdcukcodotbo" /> <!-- 자신의 비밀번호 -->
		<!-- 보안연결 SSL과 관련된 설정 -->
		<property name="javaMailProperties">
			<props>
				<prop key="mail.smtp.auth">true</prop>
				<prop key="mail.smtp.starttls.enable">true</prop>
				<prop key="mail.smtps.checkserveridentity">true</prop>
				<prop key="mail.smtps.ssl.trust">*</prop>
				<prop key="mail.debug">true</prop>
				<prop key="mail.smtp.socketFactory.class">javax.net.ssl.SSLSocketFactory</prop>
			</props>
		</property>
	</bean>


	<bean
		class="org.springframework.web.servlet.handler.SimpleMappingExceptionResolver">
		<property name="defaultErrorView" value="error/error" />
		<property name="warnLogCategory" value="example.MvcLogger" />
	</bean>

	<mybatis-spring:scan base-package="com.sac.mapper" />
	<context:component-scan
		base-package="com.sac.service"></context:component-scan>
	<context:component-scan
		base-package="com.sac.model"></context:component-scan>

</beans>
